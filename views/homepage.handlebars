<div class="container-fluid" id="login-header">
    <div class="col-4 logocontainer">
        <a href="/homepage">
            <img src="/images/pokeballer-logo-sm.png" alt="PokeBaller" class="logo img-respoonsive" />
        </a>
    </div>
</div>
<nav class="navbar justify-content-end navbar-dark bg-dark">
    <!-- Navbar content -->
    <ul class="nav justify-content-end">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button"
                data-bs-toggle="dropdown" aria-expanded="false">
                COLLECTION
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                <li><a class="dropdown-item" href="/collection">VIEW</a></li>
                <li><a class="dropdown-item" href="/add">ADD</a></li>
            </ul>
        </li>
        <li class="nav-item">
            <a class="nav-link active logout" href="/login">LOGOUT</a>
        </li>
    </ul>
</nav>

<div class="container-fluid justify-content-center text-center container welcome-poke">
    <h2> Welcome to <span class="poke-red">Poké</span><span class="poke-black">Baller</span>!</h2>
    <p class="welcome-text">Use PokéBaller to add and keep track of cards in your own personal digital collection.
        Navigate to "add" to begin
        compiling cards to your collection. To see your collection, navigate to "view."</p>
</div>

<div class="container">

    <h2 class="header-two suggested-cards-header">Suggested Cards</h2>
    <p class="suggested-text">Click a card for it to be added to your collection!</p>
    <section class="row justify-center card-table">
        {{#each suggested}}
        <button onclick="add('{{rid}}', '{{rname}}', '{{rrarity}}', '{{rimages}}')" class="card col-2">
            <img src="{{rimages}}" class="img-responsive w-100" alt="{{rname}}">
            <div class="overlay">
                <p class="rare-text">{{rrarity}}</p>
            </div>
        </button>
        {{/each}}
    </section>

</div>

<script src="/js/home.js"></script>